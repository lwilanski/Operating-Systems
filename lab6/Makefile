CC=gcc
CFLAGS=-Wall -g

SRC_DIR=src
EXECUTABLE1=ex1
EXECUTABLE2=front
EXECUTABLE3=back

all: $(EXECUTABLE1) $(EXECUTABLE2) $(EXECUTABLE3)

$(EXECUTABLE1):
	$(CC) $(CFLAGS) $(SRC_DIR)/ex1.c -o $(EXECUTABLE1) -lm

$(EXECUTABLE2):
	$(CC) $(CFLAGS) $(SRC_DIR)/front.c -o $(EXECUTABLE2) -lm

$(EXECUTABLE3):
	$(CC) $(CFLAGS) $(SRC_DIR)/back.c -o $(EXECUTABLE3) -lm

clean:
	rm -f $(EXECUTABLE1) $(EXECUTABLE2) $(EXECUTABLE3) report.txt

